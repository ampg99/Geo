#!/usr/bin/env python3

# Python utility for getting specific network info
# Author: Jake Meyer
# Github: https://github.com/jakewmeyer

import argparse

parser = argparse.ArgumentParser(usage='pygeo -l => 10.6.5.23', add_help=False)
parser.add_argument('-w', help="Returns WAN IP", metavar='')
parser.add_argument('-l', help="Returns LAN IP(s)", metavar='')
parser.add_argument('-l6', help="Returns IPv6 LAN IP(s)", metavar='')
parser.add_argument('-r', help="Returns Router IP", metavar='')
parser.add_argument('-r6', help="Returns IPv6 Router IP", metavar='')
parser.add_argument('-d', help="Returns DNS Nameserver", metavar='')  
parser.add_argument('-m', help="Returns MAC address for interface. Ex. eth0", metavar='')
parser.add_argument('-g', help="Returns Current IP Geodata", metavar='')
parser.add_argument('-v', help="Returns Version", metavar='')
parser.add_argument('-h', action='help', help='Show this help message and exit.')

args=parser.parse_args()                 